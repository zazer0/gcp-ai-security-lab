# Example usage and test file for flag configuration
# This file demonstrates how to override flag values

# To use custom flags during deployment:
#   export TF_VAR_flag1_value="custom_flag{your_custom_flag1}"
#   export TF_VAR_flag2_value="custom_flag{your_custom_flag2}"
#   terraform apply

# Or pass them directly:
#   terraform apply -var="flag1_value=custom_flag{test}" -var="flag2_value=custom_flag{test2}"

# The Flask app will receive these values as environment variables:
#   FLAG1 = var.flag1_value
#   FLAG2 = var.flag2_value

# Default values if not overridden:
#   FLAG1 = "flag{dev_bucket_found}"  
#   FLAG2 = "flag{terraform_state_accessed}"

# Test output to verify values
output "flag_values_test" {
  description = "Display configured flag values for testing"
  value = {
    flag1 = var.flag1_value
    flag2 = var.flag2_value
  }
  sensitive = false
}